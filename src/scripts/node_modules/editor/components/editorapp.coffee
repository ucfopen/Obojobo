	undo: ->
		history = @history.undo()
		if history.lo
			@forceModule history.lo
		if history.selection
			# console.log JSON.stringify(history.selection, null, 2)
			@state.selection.setFutureFromDescriptor history.selection

	redo: ->
		history = @history.redo()
		if history.lo
			@forceModule history.lo
		if history.selection
			# console.log JSON.stringify(history.selection, null, 2)
			@state.selection.setFutureFromDescriptor history.selection

