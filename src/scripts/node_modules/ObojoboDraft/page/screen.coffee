OboSelectionRect = require 'ObojoboDraft/obodom/selection/oboselectionrect'

PX_EDGE_PADDING = 50

class Screen
	constructor: (el) ->
		@el = el
		@intervalId = null
		@distance = 0
		@distanceLeft = 0
		@travelBy = 0

	# getScrollPosition: ->
