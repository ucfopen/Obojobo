Anchor = require 'ObojoboDraft/components/anchor'

module.exports = React.createClass
	getDefaultProps: ->
		indent: 0
		spellcheck: true

	getAnchorNode: ->
		if not @refs?.anchor?.refs?.anchorElement? then return null
		@refs.anchor.refs.anchorElement

	render: ->
		className = this.props.className

		`<div className={'focusable-chunk anchor-container' + (className ? ' ' + className : '')} contentEditable="false" data-margin={this.props.indent}>
			<Anchor {...this.props} name="main" ref="anchor" />
			{ this.props.children }
		</div>`