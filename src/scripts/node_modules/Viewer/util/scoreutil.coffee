Dispatcher = window.ObojoboDraft.Common.flux.Dispatcher

ScoreUtil =
	setScore: (id, score) ->
		Dispatcher.trigger 'score:set',
			value:
				id: id,
				score: score

	clearScore: (id) ->
		Dispatcher.trigger 'score:clear',
			value:
				id: id

	viewQuestion: (id) ->
		Dispatcher.trigger 'score:viewQuestion',
			value:
				id: id

	hideQuestion: (id) ->
		Dispatcher.trigger 'score:hideQuestion',
			value:
				id: id


module.exports = ScoreUtil